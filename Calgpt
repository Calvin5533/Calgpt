import random

def intro():
    print("Welcome to Code Quest!")
    print("In this game, you'll solve programming challenges to advance through the land of Python.")
    print("Let's get started!\n")

def challenge_1():
    print("Challenge 1: Variables")
    print("Create a variable called 'name' and assign it your name.")
    name = input("Enter your name: ")
    print(f"Great job, {name}! You've completed Challenge 1.\n")

def challenge_2():
    print("Challenge 2: Basic Math")
    print("What is 5 + 7?")
    answer = int(input("Enter your answer: "))
    if answer == 12:
        print("Correct! You've completed Challenge 2.\n")
    else:
        print("Oops! That's not right. The correct answer is 12.\n")

def challenge_3():
    print("Challenge 3: If Statements")
    print("Write a simple if statement that checks if a number is even.")
    number = int(input("Enter a number: "))
    if number % 2 == 0:
        print(f"{number} is even. Well done!\n")
    else:
        print(f"{number} is odd. Try again next time!\n")

def challenge_4():
    print("Challenge 4: Loops")
    print("Write a loop that prints numbers from 1 to 5.")
    for i in range(1, 6):
        print(i)
    print("You've completed Challenge 4.\n")

def main():
    intro()
    challenge_1()
    challenge_2()
    challenge_3()
    challenge_4()
    print("Congratulations! You've completed all challenges in Code Quest!")

if __name__ == "__main__":
    main()
